{
  "name": "@lmc-eu/spirit-web-react",
  "version": "0.1.0",
  "description": "React implementation of Spirit Design System components",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "module": "_esNext/index.js",
  "types": "_esNext/index.d.ts",
  "dependencies": {
    "classnames": "^2.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@lmc-eu/browserslist-config": "^1.0.0",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.2",
    "webpack-bundle-analyzer": "^4.4.2"
  },
  "peerDependencies": {
    "@lmc-eu/spirit-web": "*",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "scripts": {
    "prebuild": "rm -rf dist && mkdir -p dist && cp package.json README.md dist/ ",
    "build": "yarn build:umd && yarn build:es2015 && yarn build:esNext",
    "build:umd": "yarn webpack:dev && yarn webpack:prod && yarn webpack:browser",
    "build:es2015": "tsc --module es2015 --outDir dist/_es2015 --project ./config/tsconfig.prod.json",
    "build:esNext": "tsc --module esNext --outDir dist/_esNext --project ./config/tsconfig.prod.json",
    "types": "tsc -p ./config/tsconfig.json",
    "webpack:dev": "webpack --mode development --config ./config/webpack.js --progress",
    "webpack:prod": "webpack --mode production --config ./config/webpack.js --progress",
    "webpack:browser": "webpack --mode production --config ./config/webpack.browser.js --progress"
  }
}
