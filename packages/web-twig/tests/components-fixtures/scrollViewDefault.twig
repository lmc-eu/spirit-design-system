<ScrollView data-spirit-toggle="scrollView">ScrollView</ScrollView>

<!-- Render with horizontal direction -->
<ScrollView direction="horizontal" data-spirit-toggle="scrollView">ScrollView content</ScrollView>

<!-- Render with disabled Scrollbar -->
<ScrollView direction="horizontal" data-spirit-toggle="scrollView" isScrollbarDisabled>
    <p>
        ScrollView content
    </p>
</ScrollView>

<!-- Render with borders as overflow decorators -->
<ScrollView overflowDecorators="borders" data-spirit-toggle="scrollView">
    <p>
        ScrollView content
    </p>
</ScrollView>

<!-- Render with both overflow decorators and in horizontal direction -->
<ScrollView direction="horizontal" overflowDecorators="both" data-spirit-toggle="scrollView">
    <p>
        ScrollView content
    </p>
</ScrollView>

<!-- Render with all props -->
<ScrollView direction="horizontal" overflowDecorators="borders" isScrollbarDisabled data-spirit-toggle="scrollView">
    <p>
        ScrollView content
    </p>
</ScrollView>
