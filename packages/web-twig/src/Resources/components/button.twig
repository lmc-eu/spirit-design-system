{% set _className = _spiritClassPrefix ~ 'Button' %}
{% set _color = (props.color is defined) ? ' ' ~ _className ~ '--' ~ props.color : ' ' ~  _className ~ '--primary' %}
{% set _block = props.isBlock is defined and props.isBlock == 'true'  ? ' ' ~ _className ~ '--block' : '' %}
{% set _square = props.isSquare is defined and props.isSquare == 'true' ? ' ' ~ _className ~ '--square' : '' %}
{% set _type = (props.type is defined) ? props.type : 'button' %}
{% set _disabled = props.isDisabled is defined and props.isDisabled == 'true'  ? ' disabled="true"' : '' %}
{% set _ariaLabel = (props.ariaLabel is defined) ? ' aria-label="' ~ props.ariaLabel ~ '"' : '' %}
{% set _onClick = (props.onClick is defined) ? ' onclick="' ~ props.onClick ~'"' : '' %}
{% set _class = (props.class is defined) ? ' ' ~  props.class : '' -%}

<button class="{{ _className }}{{ _color }}{{ _block }}{{ _square }}{{ _class }}" type="{{ _type }}"{{ _disabled|raw }}{{ _ariaLabel|raw }}{{ _onClick|raw }}>
  {%- block content %}{% endblock %}
</button>
