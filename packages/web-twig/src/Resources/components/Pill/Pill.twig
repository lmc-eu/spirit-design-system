{# API #}
{%- set props = props | default([]) -%}
{%- set _color = props.color | default('selected') -%}
{%- set _elementType = props.elementType | default('span') -%}

{# Class names #}
{%- set _rootClassName = _spiritClassPrefix ~ 'Pill' -%}
{%- set _colorClassName = _spiritClassPrefix ~ 'Pill--' ~ _color -%}

{# Miscellaneous #}
{%- set _styleProps = useStyleProps(props) -%}
{%- set _classNames = [ _rootClassName, _colorClassName, _styleProps.className ] -%}

<{{ _elementType }} {{ mainProps(props) }} {{ styleProp(_styleProps) }} {{ classProp(_classNames) }}>
{%- block content %}{% endblock -%}
</{{ _elementType }}>
