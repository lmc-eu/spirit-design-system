{% set _className = _spiritClassPrefix ~ 'CheckboxField' %}
{% set _id = (props.id is defined) ? props.id : '' %}

{% set _textClass = _className ~ '__text' %}

{% set _label = (props.label is defined) ? props.label : '' %}
{% set _labelClass = _className ~ '__label' %}
{% set _labelClassRequired = (props.label is defined and props.isRequired is defined and props.isRequired == 'true') ? ' ' ~ _labelClass ~ '--required' : '' %}
{% set _labelClassHidden = (props.isLabelHidden is defined and props.isLabelHidden == 'true') ? ' ' ~ _labelClass ~ '--hidden' : '' %}

{% set _inputName = (props.name is defined) ? props.name : '' %}
{% set _type = (props.type is defined) ? props.type : 'text' %}
{% set _InputClass = _className ~ '__input' %}

{% set _disabled = (props.isDisabled is defined and props.isDisabled == 'true') ? ' disabled="true"' : '' %}
{% set _checked = (props.isChecked is defined and props.isChecked == 'true') ? ' checked="checked"' : '' %}
{% set _required = (props.isRequired is defined and props.isRequired == 'true') ? ' required="true"' : '' %}
{% set _disabledClass = (props.isDisabled is defined and props.isDisabled == 'true') ? ' ' ~ _className ~ '--disabled' : '' %}
{% set _validationStateClass = (props.validationState is defined and props.validationState is not empty) ? ' ' ~ _className ~ '--' ~ props.validationState : '' %}
{% set _value = (props.value is defined) ? props.value : '' %}
{% set _class = (props.class is defined) ? ' ' ~  props.class : '' -%}

<label for={{ _id }} class="{{ _className }}{{ _disabledClass }}{{ _validationStateClass }}{{ _class }}">
    <input
        type="checkbox"
        id="{{ _id }}"
        name="{{ _inputName }}"
        class="{{ _InputClass }}"
        {{ _checked|raw }}
        {{ _disabled|raw }}
        {{ _required|raw }}
        value="{{ _value }}"
    />
    <span class="{{ _textClass }}">
        <span class="{{ _labelClass }}{{ _labelClassHidden }}{{ _labelClassRequired }}">{{ _label }}</span>
        {% if props.message is defined and props.message is not empty %}<span class="{{ _className }}__message">{{ props.message }}</span>{% endif %}
    </span>
</label>
