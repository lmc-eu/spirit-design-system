<Checkbox />

<!-- Render with minimum props -->
<Checkbox
    id="example-id-min"
    label="Example label"
/>

<!-- Render checked -->
<Checkbox
    id="example-id-checked"
    isChecked
    label="Example label"
/>

<!-- Render with helper text -->
<Checkbox
    id="example-id-helper"
    label="Example label"
    helperText="Example helper text"
/>

<!-- Render with hidden label -->
<Checkbox
    id="example-id-hidden"
    isLabelHidden
    label="Example label"
/>

<!-- Render with all props -->
{% set inputProps = { "data-validate": "true" } %}
<Checkbox
    helperText="Example helper text"
    id="example-id-all"
    inputProps={ inputProps }
    isChecked
    isDisabled
    isItem
    isLabelHidden
    isRequired
    label="Example label"
    name="example-name"
    UNSAFE_helperText="UNSAFE helper text"
    UNSAFE_label="UNSAFE label"
    UNSAFE_validationState="UNSAFE validation state"
    validationState="danger"
    validationText="Example validation text"
    value="example value"
/>
