<section class="docs-Section">
  <h2 class="docs-Heading">Default</h2>

  <Grid cols="1" desktop="3">
    {% for size in sizes %}
    <div>
      <h3 class="docs-Heading">Size {{ size }}</h3>
      {% for color in colors %}
      <div class="{% if color is same as('inverted') %}docs-Box {% endif %}my-600">
        <div>
          <Button color={color} size={size} onClick="alert('rimmer')">Button {{ color }}</Button>
          <Button color={color} size={size}>
            <Icon name="hamburger" UNSAFE_className="mr-400" />
            Menu
          </Button>
          <Button color={color} size={size} isSquare>
            <span class="accessibility-hidden">Menu</span>
            <Icon name="hamburger" />
          </Button>
        </div>
      </div>
      {% endfor %}
    </div>
    {% endfor %}
  </Grid>
</section>
