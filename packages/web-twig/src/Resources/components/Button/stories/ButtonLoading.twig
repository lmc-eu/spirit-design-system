<Grid cols="{{ { mobile: 1, desktop: 3 } }}">
    {% for size in sizes %}

        {% set title = 'Size ' ~ size %}

        <DocsSection title={{ title }}>
            {% for color in colors %}
                <div>
                    <Button color={ color } size={ size } onclick="alert('Button clicked')" isLoading>
                        Button {{ color }}
                    </Button>
                    <Button color={ color } size={ size } isLoading>
                        <Icon name="hamburger" marginRight="space-400" />
                        Menu
                    </Button>
                    <Button color={ color } size={ size } isLoading isSymmetrical>
                        <VisuallyHidden>Menu</VisuallyHidden>
                        <Icon name="hamburger" />
                    </Button>
                </div>
            {% endfor %}
        </DocsSection>

    {% endfor %}
</Grid>
