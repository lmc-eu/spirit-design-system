{# API #}
{%- set props = props | default([]) -%}
{%- set _ariaHidden = props.ariaHidden ?? true -%}
{%- set _class = props.class | default(null) -%}
{%- set _isReusable = props.isReusable ?? true -%}
{%- set _name = props.name -%}
{%- set _boxSize = props.boxSize | default('24') -%}
{%- set _size = props.size | default(null) -%}
{%- set _title = props.title | default(null) -%}

{# Miscellaneous #}
{%- set _mainProps = props | filter((value, prop) => prop != 'ariaHidden') | merge({
    'aria-hidden': _ariaHidden ? 'true' : 'false',
}) -%}

{# Deprecations #}
{% if _size %}
    {% deprecated 'Icon: The "size" property is deprecated, use "boxSize" instead.' %}
{% endif %}

{{ inlineSvg('@icons-assets/' ~ _name ~ '.svg', { class: _class, size: _size ? _size : _boxSize, title: _title, mainProps: _mainProps }, _isReusable) }}
