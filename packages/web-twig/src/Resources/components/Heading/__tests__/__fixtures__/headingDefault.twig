<!-- Render as div -->
<Heading elementType="div">
    Example heading
</Heading>

<!-- Render as h1 -->
<Heading elementType="h1">
    Example heading
</Heading>

<!-- Render as h1 semibold -->
<Heading elementType="h1" emphasis="semibold">
    Example heading
</Heading>

<!-- Render as h1 with textColor -->
<Heading elementType="h1" textColor="secondary">
    Example heading
</Heading>

<!-- Render as h1 with textAlignment -->
<Heading elementType="h1" textAlignment="center">
    Example heading
</Heading>
<Heading elementType="h1" textAlignment="right">
    Example heading
</Heading>
<Heading elementType="h1" textAlignment="{{ { mobile: 'left', tablet: 'center', desktop: 'right'} }}">
    Example heading
</Heading>

<!-- Render with all props -->
<Heading
    elementType="h2"
    emphasis="italic"
    size="large"
    textColor="tertiary"
    translate="no"
>
    Example heading
</Heading>
