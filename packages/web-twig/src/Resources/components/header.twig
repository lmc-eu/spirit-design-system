{% set _rootClassName = _spiritClassPrefix ~ 'Header' %}
{% set _class = (props.class is defined) ? props.class : '' %}
{% set _invertedClassName = (props.isInverted is defined and props.isInverted == 'true' ) ? _rootClassName ~ '--inverted' : '' %}
{% set _simpleClaccName = (props.isSimple is defined and props.isSimple == 'true' ) ? _rootClassName ~ '--simple' : '' %}

{# Miscellaneous #}
{%- set _classNames = [ _rootClassName, _simpleClassName, _invertedClassName, _class ] -%}

<header {{ classProp(_classNames) }}>
{% block content %}{% endblock %}
</header>
