{% set _className = _spiritClassPrefix ~ 'Alert' %}
{% set _class = (props.class is defined) ? ' ' ~  props.class : '' -%}
{% set _color = (props.color is defined) ? ' ' ~ _className ~ '--' ~ props.color : ' ' ~  _className ~ '--success' %}
{% set _elementType = (props.elementType is defined) ? props.elementType : 'div' -%}

<{{ _elementType }} class="{{ _className }}{{ _color }}{{ _class }}" role="alert">
{% block content %}{% endblock %}
</{{ _elementType }}>
