{% set states = ['success', 'warning', 'danger'] %}

{% for state in states %}

    {% set text = "This is " ~ state ~ " validation text with icon." %}
    {% set id = "field-group-" ~ state ~ "-validation-icon" %}

    <FieldGroup
        hasValidationIcon
        id={id}
        label="Label"
        validationState={state}
        validationText={text}
    >
        {% for i in 1..3 %}
            <DocsBox>Item</DocsBox>
        {% endfor %}
    </FieldGroup>

{% endfor %}
