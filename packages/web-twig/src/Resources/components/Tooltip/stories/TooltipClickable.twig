<h3>Without Floating UI</h3>

<Button
    id="tooltip-trigger"
    data-spirit-target="#my-js-controlled-tooltip"
    data-spirit-toggle="tooltip"
>
    Toggle tooltip
</Button>

<TooltipWrapper UNSAFE_className="d-inline-block">
    <DocsBox aria-describedby="my-js-controlled-tooltip">
        I have an externally-triggered tooltip
    </DocsBox>
    <Tooltip
        id="my-js-controlled-tooltip"
        placement="bottom-start"
    >
        Hello there!
    </Tooltip>
</TooltipWrapper>

<h3 class="mt-1000">With Floating UI and Placement Fallbacks</h3>

<Button
    id="tooltip-trigger2"
    data-spirit-toggle="tooltip"
    data-spirit-target="#my-js-controlled-tooltip-fui"
>
    Toggle tooltip
</Button>

<TooltipWrapper>
    <div
        class="docs-Box"
        aria-describedby="my-js-controlled-tooltip-fui"
    >
        I have an externally-triggered tooltip
    </div>
    <TooltipPopover
        id="my-js-controlled-tooltip-fui"
        enableControlledPlacement
        placement="bottom-start"
    >
        Hello there!
    </TooltipPopover>
</TooltipWrapper>
