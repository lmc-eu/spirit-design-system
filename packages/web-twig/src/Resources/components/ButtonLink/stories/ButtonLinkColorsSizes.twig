<Grid cols="{{ { mobile: 1, desktop: 3 } }}">
    {% for size in sizes %}

        {% set title = 'Size ' ~ size %}

        <DocsSection title={{ title }}>
            {% for color in colors %}

                {% set renderedContent %}
                    <ButtonLink color={ color } size={ size } href="#">
                        Button {{ color }}
                    </ButtonLink>
                    <ButtonLink color={ color } size={ size } href="#">
                        <Icon name="link" marginRight="space-400" />
                        Menu
                    </ButtonLink>
                    <ButtonLink color={ color } size={ size } href="#" isSquare>
                        <VisuallyHidden>Menu</VisuallyHidden>
                        <Icon name="link" />
                    </ButtonLink>
                {% endset %}

                {% if color is same as('inverted') %}
                    <DocsBox>
                        {{ renderedContent }}
                    </DocsBox>
                {% else %}
                    <div>
                        {{ renderedContent }}
                    </div>
                {% endif %}

            {% endfor %}
        </DocsSection>

    {% endfor %}
</Grid>
