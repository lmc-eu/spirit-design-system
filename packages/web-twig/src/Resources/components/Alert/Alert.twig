{# API #}
{%- set _class = props.class | default(null) -%}
{%- set _color = props.color | default('success') -%}
{%- set _elementType = props.elementType | default('div') -%}

{# Class names #}
{%- set _colorClassName = _spiritClassPrefix ~ 'Alert--' ~ _color -%}
{%- set _rootClassName = _spiritClassPrefix ~ 'Alert' -%}

{# Miscellaneous #}
{%- set _classNames = [ _rootClassName, _colorClassName, _class ] -%}

<{{ _elementType }} {{ mainProps(props) }} {{ classProp(_classNames) }} role="alert">
{%- block content %}{% endblock -%}
</{{ _elementType }}>
