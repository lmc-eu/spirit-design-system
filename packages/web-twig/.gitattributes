# Exclude build/test files from archive
/.github            export-ignore
/app                export-ignore
/bin                export-ignore
/config             export-ignore
/docker             export-ignore
/docs               export-ignore
/public             export-ignore
/static             export-ignore
/tests              export-ignore
/var                export-ignore
/.dockerignore      export-ignore
/.env*              export-ignore
/.editorconfig      export-ignore
