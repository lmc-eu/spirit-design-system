{
  "name": "@lmc-eu/spirit-web",
  "version": "0.7.0",
  "description": "CSS and vanilla JS implementation of Spirit Design System",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lmc-eu/spirit-design-system.git",
    "directory": "packages/web"
  },
  "scripts": {
    "prebuild": "rm -rf dist && mkdir -p dist/scss && cp package.json README.md dist/ && cp -r src/* dist/scss/",
    "build": "yarn css",
    "precss": "yarn css:lint",
    "css": "yarn css:compile && yarn css:prefix && yarn css:minify",
    "css:lint": "stylelint --config ../../.stylelintrc.js \"src/**/*.scss\" --cache --cache-location .cache/.stylelintcache",
    "css:compile": "sass --load-path=../design-tokens/dist/scss src/components/index.scss dist/css/components.css",
    "css:prefix": "postcss --config postcss.config.js --replace \"dist/css/*.css\" \"!dist/css/*.min.css\"",
    "css:minify": "cleancss --format breaksWith=lf --source-map-inline-sources --batch --batch-suffix \".min\" \"dist/css/*.css\" \"!dist/css/*.min.css\"",
    "test": "yarn css:lint"
  },
  "dependencies": {
    "@lmc-eu/spirit-design-tokens": "^0.6.0"
  },
  "devDependencies": {
    "@lmc-eu/browserslist-config": "1.0.2",
    "@lmc-eu/stylelint-config": "2.0.2",
    "autoprefixer": "10.4.2",
    "clean-css-cli": "5.5.2",
    "postcss": "8.4.6",
    "postcss-cli": "9.1.0",
    "sass": "1.49.7",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-order": "4.1.0"
  }
}
