{
  "name": "spirit",
  "version": "1.0.0",
  "description": "Spirit Design System",
  "keywords": [
    "spirit",
    "design",
    "system"
  ],
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=14",
    "yarn": "~1.22.10"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "diff": "lerna diff",
    "changed": "lerna changed",
    "list": "lerna ls",
    "commit:lint:test": "yarn commitlint --from HEAD~1 --to HEAD --verbose",
    "format": "yarn format:check",
    "format:check": "prettier --list-different 'packages/**/*.{js,jsx,ts,tsx,scss}'",
    "format:fix": "prettier --write 'packages/**/*.{js,jsx,ts,tsx,scss}'",
    "prepare": "husky install",
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "storybook:build": "build-storybook -o ./.storybook/build",
    "test": "lerna run test",
    "release": "yarn build && lerna publish"
  },
  "dependencies": {
    "del": "^6.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-sass": "^5.0.0",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@commitlint/cli": "^12.0.1",
    "@lmc-eu/commitlint-config": "^1.0.0",
    "@lmc-eu/prettier-config": "^1.0.1",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addons": "^6.2.9",
    "@storybook/html": "^6.2.9",
    "@storybook/theming": "^6.2.9",
    "babel-loader": "^8.2.2",
    "gulp": "^4.0.2",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1"
  }
}
