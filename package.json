{
  "name": "spirit",
  "version": "1.0.0",
  "description": "Spirit Design System",
  "keywords": [
    "spirit",
    "design",
    "system"
  ],
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=14",
    "yarn": "~1.22.10"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "exporters/*"
  ],
  "scripts": {
    "start": "yarn packages:start",
    "build": "yarn packages:build",
    "es:lint": "eslint ./",
    "es:lint:fix": "yarn es:lint --fix",
    "examples": "yarn examples:build",
    "examples:install": "cd examples/web-react && yarn install",
    "examples:build": "cd examples/web-react && yarn build",
    "commit:lint:test": "yarn commitlint --from HEAD~1 --to HEAD --verbose",
    "format": "yarn format:check",
    "format:check": "prettier --check ./",
    "format:fix": "prettier --write ./",
    "format:fix:changelog": "prettier --write ./**/CHANGELOG.md",
    "prepare": "is-ci || husky install",
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "storybook:build": "build-storybook -o ./.storybook/build",
    "test": "yarn packages:test",
    "types": "yarn packages:types",
    "lint": "npm-run-all --parallel es:lint packages:lint",
    "packages:lint": "lerna run lint --parallel --no-sort",
    "packages:start": "lerna run start --parallel",
    "packages:test": "lerna run test",
    "packages:types": "lerna run types --no-sort",
    "packages:build": "lerna run --ignore @lmc-eu/spirit-web-twig-demo build --no-sort",
    "packages:publish": "lerna publish",
    "packages:diff": "lerna diff",
    "packages:changed": "lerna changed",
    "packages:list": "lerna ls",
    "release": "npm-run-all --serial packages:build && packages:publish",
    "version": "yarn format:fix:changelog"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/preset-react": "7.18.6",
    "@commitlint/cli": "17.4.3",
    "@lmc-eu/commitlint-config": "1.0.17",
    "@lmc-eu/conventional-changelog-lmc-github": "2.3.1",
    "@lmc-eu/eslint-config-react": "1.1.1",
    "@lmc-eu/prettier-config": "1.2.4",
    "@omlet/cli": "1.0.1-beta.15",
    "@rollup/plugin-babel": "6.0.3",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-replace": "5.0.2",
    "@storybook/addon-actions": "6.5.16",
    "@storybook/addon-docs": "6.5.16",
    "@storybook/addon-essentials": "6.5.16",
    "@storybook/addon-links": "6.5.16",
    "@storybook/addons": "6.5.16",
    "@storybook/builder-webpack5": "6.5.16",
    "@storybook/html": "6.5.16",
    "@storybook/manager-webpack5": "6.5.16",
    "@storybook/react": "6.5.16",
    "@storybook/theming": "6.5.16",
    "@svgr/webpack": "6.5.1",
    "@whitespace/storybook-addon-html": "5.0.0",
    "babel-loader": "9.1.2",
    "core-js": "^3.30.1",
    "css-loader": "6.7.3",
    "eslint": "8.34.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "lerna": "6.5.1",
    "netlify-cli": "12.12.0",
    "npm-run-all": "4.1.5",
    "nx": "15.7.0",
    "postcss": "8.4.21",
    "prettier": "2.8.4",
    "pretty-quick": "3.1.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-textarea-autosize": "8.4.0",
    "sass-loader": "13.2.0",
    "style-loader": "3.3.1",
    "typescript": "4.7.4",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1"
  },
  "resolutions": {
    "@types/react": "18.0.28",
    "typescript": "4.7.4"
  }
}
