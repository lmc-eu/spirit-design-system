{
  "name": "spirit",
  "version": "1.0.0",
  "description": "Spirit Design System",
  "keywords": [
    "spirit",
    "design",
    "system"
  ],
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=14",
    "yarn": "~1.22.10"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "es:lint": "eslint ./",
    "es:lint:fix": "yarn es:lint --fix",
    "build": "yarn packages:build",
    "examples": "yarn examples:build",
    "examples:install": "cd examples/web && yarn install && cd ../web-react && yarn install",
    "examples:build": "cd examples/web && yarn build && cd ../web-react && yarn build",
    "commit:lint:test": "yarn commitlint --from HEAD~1 --to HEAD --verbose",
    "format": "yarn format:check",
    "format:check": "prettier --check ./",
    "format:fix": "prettier --write ./",
    "format:fix:changelog": "prettier --write ./packages/**/CHANGELOG.md",
    "prepare": "husky install",
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "storybook:build": "build-storybook -o ./.storybook/build",
    "test": "yarn packages:test",
    "types": "yarn packages:types",
    "lint": "npm-run-all es:lint packages:lint",
    "packages:lint": "lerna run lint",
    "packages:test": "lerna run test",
    "packages:types": "lerna run types",
    "packages:build": "lerna run build",
    "packages:publish": "lerna publish",
    "packages:diff": "lerna diff",
    "packages:changed": "lerna changed",
    "packages:list": "lerna ls",
    "release": "npm-run-all --serial packages:build && packages:publish",
    "version": "yarn format:fix:changelog"
  },
  "devDependencies": {
    "@babel/core": "7.17.8",
    "@babel/preset-react": "7.16.7",
    "@commitlint/cli": "16.2.3",
    "@lmc-eu/commitlint-config": "1.0.11",
    "@lmc-eu/conventional-changelog-lmc-github": "2.0.2",
    "@lmc-eu/eslint-config-react": "1.0.0",
    "@lmc-eu/prettier-config": "1.2.3",
    "@storybook/addon-actions": "6.4.19",
    "@storybook/addon-essentials": "6.4.19",
    "@storybook/addon-links": "6.4.19",
    "@storybook/addons": "6.4.19",
    "@storybook/builder-webpack5": "^6.4.19",
    "@storybook/html": "6.4.19",
    "@storybook/manager-webpack5": "^6.4.19",
    "@storybook/react": "6.4.19",
    "@storybook/theming": "6.4.19",
    "babel-loader": "8.2.3",
    "css-loader": "6.7.1",
    "eslint": "8.11.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "7.0.4",
    "lerna": "4.0.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.12",
    "prettier": "2.6.0",
    "sass-loader": "12.6.0",
    "style-loader": "3.3.1",
    "webpack": "5.70.0",
    "webpack-cli": "4.9.2"
  },
  "resolutions": {
    "@types/react": "17.0.41"
  }
}
