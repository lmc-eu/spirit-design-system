{% set _rootClassName = _spiritClassPrefix ~ 'Header' %}
{% set _variant = (props.variant is defined) ? _rootClassName ~ '__' ~ props.variant : ' ' ~  _rootClassName ~ '__bar' %}
{% set _class = (props.class is defined) ? ' ' ~  props.class : '' %}

{# Miscellaneous #}
{%- set _classNames = [ _rootClassName, _class ] -%}

<nav {{ classProp(_classNames) }}>
  <div class="{{ _rootClassName }}__content">
  {% block content %}{% endblock %}
  </div>
</nav>
