{
  "$schema": "https://json.schemastore.org/lerna",
  "packages": ["packages/*", "exporters/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "useNx": true,
  "command": {
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "@lmc-eu/conventional-changelog-lmc-github",
      "createRelease": "github",
      "push": false,
      "message": "Chore(release): Publish",
      "ignoreChanges": ["yarn.lock"]
    },
    "publish": {
      "message": "Chore(release): Publish"
    }
  }
}
